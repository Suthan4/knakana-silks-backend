{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    "module": "nodenext",
    "target": "ES2021",
    "moduleResolution": "nodenext",

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "strict": true,
    "moduleDetection": "force",
    "skipLibCheck": true,

    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    }
  },

  "include": ["src"],
  "exclude": ["node_modules", "dist", "prisma"],
  // Add this for tsc-alias
  "tsc-alias": {
    "resolveFullPaths": true
  }
}
